local Debounce =
Debounce ._ keys =

function Debounce: Add(key: any, duration: number? ): ()
local duration: number = duration or 1
self ._ keys[key] = tick() + duration

end

function Debounce: Remove(key: any): ()
self ._ keys [key] = nil

end

function Debounce: Check(key: any): boolean
if not self ._ keys[key] or tick() >= self ._ keys[key] then
self ._ keys [key] = nil
return true
else
return false

end

end

function Debounce: WaitFor(key: any): ()
while not self: Check(key) do
task.wait()

end

end

return Debounce
